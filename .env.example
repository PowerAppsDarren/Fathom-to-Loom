# PocketBase Configuration
POCKETBASE_URL=http://127.0.0.1:8090
POCKETBASE_ADMIN_EMAIL=admin@example.com
POCKETBASE_ADMIN_PASSWORD=change-this-password

# SMTP Service Configuration
SMTP_SERVICE_HOST=127.0.0.1
SMTP_SERVICE_PORT=3001

# SMTP Configuration (Initial fallback settings - used when PocketBase settings are not configured)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Fathom-to-Loom System
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
API_SECRET=your-api-secret-for-smtp-service

# Logging
RUST_LOG=info
